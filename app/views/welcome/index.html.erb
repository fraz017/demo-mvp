    <div class="overlay-image">
        <div class="overlay-text">
            <p> Center the lays logo inside for accurate scan</p>
        </div>
    </div>
    <video id="video" autoplay playsinline="true"></video>
</div>  
<div class="main">
    <div class="overlay">
        <div class="inner-body-loading">
            <%= image_tag "loading.gif", class: "img-fluid" %>
        </div>
    </div>
    <div class="container-lays">
        <section class="bg-lays">
            <div class="msg-alert alert alert-danger alert-lays">       
                    <strong>Please</strong> Locate Lays Logo. Then Try Again!
                </div>
            <div class="scan-icon">
                <button id="logo" class="btn-lays"><%= image_tag "LayScannerScreenFinal.png", width: "100%" %></button>
                <input type="file" accept="image/*" id="file-input" capture="environment" style="display:none;">
            </div>
        </section>
    </div>
<div>
