<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header">
                <h4 class="card-title float-left"> Available Content</h4>
                <%= link_to "Add New Content", new_admin_content_path, class: "btn btn-primary float-right" %>
            </div>
            <div class="card-body">
            <div class="table-responsive">
                <table class="table tablesorter " id="">
                    <thead class=" text-primary">
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Url
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @contents.each do |content| %>
                            <tr>
                                <td>
                                    <%= content.name %>
                                </td>
                                <td>
                                    <%= content.url %>
                                </td>
                                <td class="text-center">
                                    <%= link_to "<i class='tim-icons icon-pencil'></i>".html_safe, edit_admin_content_path(content), class: "btn btn-warning" %>
                                    <%= link_to "<i class='tim-icons icon-trash-simple'></i>".html_safe, [:admin, content], class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                                </td>
                            </tr>
                        <% end %>
                        <%if @contents.count == 0 %>
                            <tr>
                                <td colspan="3"> No Content Avialable </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
</div>