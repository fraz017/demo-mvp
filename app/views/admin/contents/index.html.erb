 <% flash.each do |key, value| %>
    <div class="text-center flash <%= key %> alert-primary">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
        <%= value %>
    </div>
<% end %>
<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header">
                <h4 class="card-title float-left"> Available Redirects</h4>
                <%= link_to "Add New Redirect", new_admin_content_path, class: "btn btn-primary float-right" %>
            </div>
            <div class="card-body">
            <div class="table-responsive">
                <table class="table tablesorter " id="">
                    <thead class=" text-primary">
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Url
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @contents.each do |content| %>
                            <tr>
                                <td>
                                    <%= content.name %>
                                </td>
                                <td>
                                    <%= content.url %>
                                </td>
                                <td class="text-center">
                                    <%= link_to "<i class='tim-icons icon-pencil'></i>".html_safe, edit_admin_content_path(content), class: "btn btn-warning" %>
                                    <%= link_to "<i class='tim-icons icon-trash-simple'></i>".html_safe, [:admin, content], class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                                </td>
                            </tr>
                        <% end %>
                        <%if @contents.count == 0 %>
                            <tr>
                                <td colspan="3"> No Content Avialable </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header">
                <h4 class="card-title float-left"> Available Reset Time</h4>
                <%= link_to "Add Reset Time", new_admin_restriction_path, class: "btn btn-primary float-right" %>
            </div>
            <div class="card-body">
            <div class="table-responsive">
                <table class="table tablesorter " id="">
                    <thead class=" text-primary">
                        <tr>
                            <th>
                                Time
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @restrictions.each do |content| %>
                            <tr>
                                <td>
                                    <%= content.limit %> <%= content.unit %>
                                </td>
                                <td class="text-center">
                                    <%= link_to "<i class='tim-icons icon-pencil'></i>".html_safe, edit_admin_restriction_path(content), class: "btn btn-warning" %>
                                    <%= link_to "<i class='tim-icons icon-trash-simple'></i>".html_safe, [:admin, content], class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                                </td>
                            </tr>
                        <% end %>
                        <%if @restrictions.count == 0 %>
                            <tr>
                                <td colspan="3"> No Reset Time Available </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header">
                <h4 class="card-title float-left"> Reset Data</h4>
                <%= link_to "Clear Data", admin_destroy_path, class: "btn btn-lg btn-danger float-right", method: :delete, data: { confirm: 'Are you sure? All scans data will be deleted' } %>
            </div>
            <div class="card-body">
            </div>
        </div>
    </div>
</div>